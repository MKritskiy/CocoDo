<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
    <style name="BackgroundAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="MyCheckBoxStyle" parent="@android:style/Widget.CompoundButton.CheckBox">
        <item name="android:stateListAnimator">@anim/checkbox_draw_anim</item>
    </style>

    <style name="RedTimePickerTheme" parent="@android:style/Widget.Material.Light.TimePicker">
        <item name="android:timePickerMode">spinner</item>
        <item name="colorAccent">@color/coco_red</item>
        <item name="android:headerBackground">@color/coco_red</item>
        <item name="android:numbersTextColor">#ff000000</item>
        <item name="android:numbersBackgroundColor">#ffdddddd</item>
        <item name="background">@color/back_gray</item>

    </style>
    <style name="DatePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/coco_red</item>
        <item name="background">@color/back_gray</item>
        <item name="colorOnPrimary">@color/coco_red</item>
    </style>
    <style name="ButtonStyle" parent="@style/Widget.Material3.Button.TonalButton">
        <item name="rippleColor">@color/riple_color</item>
    </style>

</resources>